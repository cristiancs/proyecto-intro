@import 'nib'
@import 'rupture'
@import "fonts.styl"

@import "../dashboard/index.styl"
@import "../graficas/index.styl"

body
	background #34495e
	font-size 16px
	font-family 'Open Sans'
	margin-bottom 16rem
	// +retina()
	// 	font-size 32px
	+above(760px)
		margin-bottom 6rem
h1
	font-size 2em
	text-align center
	color white
	font-family Oswald
h2
	font-family 2em
	margin .5em
button
	border-radius 1em
	background white
	padding 1em
	vertical-align middle
	border none
#menu
	position fixed
	width 100%
	bottom 0px
	left 0
	ul
		display flex
		color white
		box-shadow 0px 0px 20px rgba(0,0,0,.3)
		background #95a5a6
		padding .5em 1em
		margin 0
		list-style none
		font-size .85em
		justify-content space-around
		li
			text-align center
			&.active a
				color black 
		a
			color white
			text-decoration none
		i
			// +retina()
			// 	font-size 6rem
			font-size 2rem
			display block
			// +retina()
			// 	margin-bottom 1rem
			margin-bottom .3rem
		span